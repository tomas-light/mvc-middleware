{
  "compilerOptions": {
    "declaration": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "Node16",
    "noErrorTruncation": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "resolveJsonModule": true,
    "plugins": [
      {
        "transform": "cheap-di-ts-transform",
        "debug": true
      }
    ]
  },
  "ts-node": {
    "compiler": "ts-patch/compiler"
  }
}
